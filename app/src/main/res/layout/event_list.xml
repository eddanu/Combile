<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f7c3d9"
    android:layout_margin="4dp">


    <ImageView
        android:id="@+id/Event_pic"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@mipmap/ic_launcher"
        android:scaleType="centerCrop"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:ignoreContentDescription="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/Event_pic"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/Event_pic"
        android:layout_toRightOf="@+id/Event_pic"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Event_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="2dp"
            android:maxLines="1"
            android:textColor="#b62663"
            android:text="@string/app_name"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/Event_Detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="2dp"
            android:text="@string/app_name"
            android:textSize="13sp" />
    </LinearLayout>


</android.support.v7.widget.CardView>